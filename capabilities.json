                                "displayName": "1"
                            },
                            {
                                "value": "2",
                                "displayName": "2"
                            },
                            {
                                "value": "3",
                                "displayName": "3"
                            }]
                        }
                },
                "LCLabelShow":{
                    "displayName": "Show Upper Control Label",
                    "description": "Turn on or off the Upper Control Label",
                    "type": {"bool": true}
                },
                "LCLineStyle":{
                    "displayName": "Lower Control Style" ,
                    "description": "Choose the style of line" ,
                    "type": {
                              "enumeration": [{
                                      "value": "dash",
