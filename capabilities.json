    "dataViewMappings": [
        {
                "conditions":[
                    { "category": {"max": 1},
                      "measure": {"max": 1},
                      "additionalToolTip": {"max": 3}                    
                    }

            ],
            "categorical": {
                "categories": {
                    "for": {
                        "in": "category"
                    }
                },
                "values": {
                    "select": [
                        { "bind": { "to": "measure" } },
                        { "bind": { "to": "additionalToolTip" } }
                        
                    ]
                }
