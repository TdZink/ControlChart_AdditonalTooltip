                },
                "numOfDeviationsUC_x":{
                    "displayName": "UC # of Std Deviations",
                    "description": "Supply # of Standard Deviations for the control line",
                    "type": {
                        "enumeration": [{
                                "value": "1",
                                "displayName": "1"
                            },
                            {
                                "value": "2",
                                "displayName": "2"
                            },
                            {
                                "value": "3",
                                "displayName": "3"
                            }]
                        }
                },
